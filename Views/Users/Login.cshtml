@{ 
    ViewData["Title"] = "Login";
}
<style type="text/css">
    th {
        text-align: right;
    }
    td {
        padding: 2px;
    }
</style>


<form asp-action="Login">
    <table>
        <tr>
            <th>Username:</th>
            <td><input type="text" name="Username" /></td>
        </tr>
        <tr>
            <th>Password:</th>
            <td><input type="password" name="Password"></td>
        </tr>
        <tr>
            <th></th>
            <td><input type="submit" /></td>
        </tr>
    </table>
</form>