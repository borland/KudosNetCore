@model KudosNetCore.Model.User[]
@{
    ViewData["Title"] = "Administer Users";
}
<style type="text/css">
    th, td {
        border: 1px solid gray;
        border-collapse: collapse;
        padding: 2px;
    }
</style>

<table style="width: 75%; margin: 5px;">
    <tr>
        <th>Username</th>
        <th>Login</th>
        <th>&nbsp;</th>
    </tr>
    @foreach(var user in Model) {
        <tr>
            <td>@user.FullName</td>
            <td>@user.Username</td>
            <td><a asp-action="Edit" asp-route-id="@user.Id">Edit</a> </td>
        </tr>
    }
</table>

<a asp-action="Create">Create New User</a>

